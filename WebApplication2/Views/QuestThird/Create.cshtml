@{
    Layout = "_Layout";
}

<h2>Create</h2>

<form asp-controller="QuestThird" asp-action="CreateBook" method="post">
    <div class="mb-3">
        <label for="Author" class="form-label">Book's author</label>
        <input name="@nameof(Book.Author)" class="form-control" placeholder="@nameof(Book.Author)" type="text"
               id="Author" required="required"/>
    </div>
    <div class="mb-3">
        <label for="Name" class="form-label">Book name</label>
        <input name="@nameof(Book.Name)" class="form-control" placeholder="@nameof(Book.Name)" type="text"
               id="Name" required="required"/>
    </div>
    <div class="mb-3">
        <label for="YearOfPublication" class="form-label">Book's year of publication</label>
        <input name="@nameof(Book.YearOfPublication)" class="form-control" placeholder="@nameof(Book.YearOfPublication)"
               type="number" id="YearOfPublication" required="required"/>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>